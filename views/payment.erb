<section>
  <h2>
    <span class="breadcrumbs-before">Order</span>
    <span class="breadcrumbs-separator"> &rsaquo; </span>
    <span class="breadcrumbs-current">Pay</span>
    <span class="breadcrumbs-separator"> &rsaquo; </span>
    <span class="breadcrumbs-after">Invoice</span>
  </h2>
  <form action=<%= request.fullpath %> method="POST">
    <h3>Card Number</h3>
    <input type="text" name="number" />
    <br />
    <h3>Expiry</h3>
    <input type="text" name="expiry_month" placeholder="MM" />
    <input type="text" name="expiry_year" placeholder="YYYY" />
    <br />
    <h3>CVV</h3>
    <input type="text" name="cvv" />
    <br />
    <br />
    <br />
    <input type="submit" value="Submit" />
  </form>
</section>
